<!DOCTYPE html>
<html>
<head>
  <title>BarRouletteApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id='bars-container'>
  <input type="text" id='near' placeholder='Starting Location'>
  <input type="text" id='distance' placeholder='Max Distance'>
  <input type="text" id='bar_price' placeholder='Bar Price'>
  <button id='search'>Spin to Win</button>
  <section id='display'></section>
</div>

</body>
</html>
